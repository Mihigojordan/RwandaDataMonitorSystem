generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id         String   @id @unique @default(uuid())
  adminName  String?
  adminEmail String?  @unique
  phone     String?
  password   String?
  profileImage  String?
  status       AdminStatus    @default(ACTIVE)
  google_id    String?
  is2FA   Boolean? @default(false)
  isLocked   Boolean? @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

}

enum AdminStatus{
    ACTIVE
    INACTIVE
}


model NationalFigure {
  id             String   @id @default(uuid())
  indicatorName  String
  money          Float
  year           Int
  quarter        Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}


model NoPovertyTarget {
  id                String   @id @default(uuid())
  targetName        String
  targetDescription String?
  targetPercentage  Float?
  source            String?
  trend             Json?     // [{year: 2020, percentage: 20}, ...]
  map               Json?     // [{year: 2020, location: "Region A", povertyRate: 15}, ...]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model GdpCurrentPrice {
  id          String   @id @default(uuid())
  lastYear    Json?    // optional for migration
  currentYear Json?    // optional for migration
  trends      Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
model GdpShare {
  id               String   @id @default(uuid())
  totalGdp         Float    // Total GDP in some unit (e.g., billions USD)
  servicesShare    Float    // Percentage share of Services
  industryShare    Float    // Percentage share of Industry
  agricultureShare Float    // Percentage share of Agriculture
  taxesShare       Float    // Percentage share of Taxes
  privateSector    Float?   // Private sector value (not part of GDP share)
  governmentSector Float?   // Government sector value (not part of GDP share)
  imports          Float?   // Imports value (not part of GDP share)
  exports          Float?   // Exports value (not part of GDP share)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model GdpGrowthBySectorAtConstantPrice {
  id                   String   @id @default(cuid())
  totalGdp             Float
  servicesShare        Float
  industryShare        Float
  agricultureShare     Float
  taxesShare           Float
  servicesSubShares    Json
  agricultureSubShares Json
  industrySubShares    Json
}

